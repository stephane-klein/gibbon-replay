{
    "extends": "./.svelte-kit/tsconfig.json",
    "compilerOptions": {
        "target": "ES6",
        "module": "es2022",
        "rootDir": "./src",
        "strict": true,
        "types": ["svelte"],
        "esModuleInterop": true, 
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "checkJs": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
